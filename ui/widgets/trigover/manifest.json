{
	"manifest_version": 2.0,
	"id": "trigover",
	"type": "widget",
	"name": "Trigger overview",
	"namespace": "TrigOver",
	"version": "1.0",
	"author": "Zabbix",
	"description": "Displays trigger states for selected hosts.",
	"url": "https://www.zabbix.com/documentation/7.2/en/manual/web_interface/frontend_sections/dashboards/widgets/trigger_overview",
	"widget": {
		"js_class": "CWidgetTriggerOver",
		"in": {
			"hostids": {
				"type": "_hostids"
			},
			"groupids": {
				"type": "_hostgroupids"
			}
		}
	},
	"actions": {
		"widget.trigover.view": {
			"class": "WidgetView"
		}
	},
	"assets": {
		"js": ["class.widget.js"]
	}
}
