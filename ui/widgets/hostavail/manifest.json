{
	"manifest_version": 2.0,
	"id": "hostavail",
	"type": "widget",
	"name": "Host availability",
	"namespace": "HostAvail",
	"version": "1.0",
	"author": "Zabbix",
	"description": "Displays the host count by status (available/unavailable/unknown).",
	"url": "https://www.zabbix.com/documentation/7.2/en/manual/web_interface/frontend_sections/dashboards/widgets/host_availability",
	"widget": {
		"js_class": "CWidgetHostAvail",
		"in": {
			"groupids": {
				"type": "_hostgroupids"
			}
		},
		"size": {
			"width": 18,
			"height": 3
		},
		"refresh_rate": 900
	},
	"actions": {
		"widget.hostavail.view": {
			"class": "WidgetView"
		}
	},
	"assets": {
		"js": ["class.widget.js"]
	}
}
